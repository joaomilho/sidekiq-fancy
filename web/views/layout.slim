doctype html
html
  head
    title
      = Sidekiq::NAME
    meta[name="viewport" content="width=device-width,initial-scale=1.0"]
    == css 'main'

    script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"
    == js 'd3.min'
    == js 'cubism.v1.min'
    /== js "locales/jquery.timeago.#{locale}"
    == js 'application'
    /== js 'application'
    
  body
    nav == slim :_nav
    section#main
      == yield
    /.navbar.navbar-fixed-bottom.navbar-inverse
      /.navbar-inner
        /.container
          /ul.nav
            /li
              /p.navbar-text[style="color:white;"]
                /| Sidekiq v
                /= Sidekiq::VERSION
            /li
              /p.navbar-text
                /| Redis: 
                /= redis_connection
            /li
              /p.navbar-text
                /= t('Time')
                /| : 
                /= Time.now.utc.strftime('%H:%M:%S UTC')
            /- if namespace
              /li
                /p.navbar-text
                  /= t('Namespace')
                  /| : 
                  /= namespace
